    <div id="header">
    
      <h1>
        <? echo '<?'; ?> if(!$this->item->isRoot()) { <? echo '?>'; ?>
          {$#model_name} &laquo;<a href="[$#item.uri]" target="_blank" title="Посмотреть на сайте">[$#item.title]</a>&raquo;
        <? echo '<?'; ?> } else { <? echo '?>'; ?>
          {$#model_name}
        <? echo '<?'; ?> } <? echo '?>'; ?>
      </h1>
      
      <div class="header_actions">
        <? echo '<?'; ?> if(!$this->item->isRoot()) { <? echo '?>'; ?>
          
          <?if($this->published_exist){?>[[apply template="object_action_revert_publish" item="[$#item]" is_link="true" /]]<?}?>
          [[apply template="object_action" action="create" id="[$#item.id]" title="Создать дочерний объект" is_link="true" /]]
