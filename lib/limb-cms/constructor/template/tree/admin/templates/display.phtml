          [[apply template="object_action_delete" id="[$#item.id]" is_link="true" /]]
          
        <? echo '<?'; ?> } else { <? echo '?>'; ?>
          [[apply template="object_action" action="create" id="[$#item.id]" title="Создать дочерний объект" is_link="true"/]]
        <? echo '<?'; ?> } <? echo '?>'; ?>
        
      </div>
      
      [[include file='_admin_include/pager.phtml' iterator='[$#items]' /]]
      
    </div>

    <div id="body">
      [[include file='admin_{$#model_url}/items_list.phtml' iterator="[$#items]" /}}
    </div>

  [[/into]]
    
